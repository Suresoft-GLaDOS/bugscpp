          ]
        }
      ]
    },
    "build-coverage": {
      "commands": [
        {
          "type": "docker",
          "lines": [
            "make clean",
            "make CFLAGS=\"-Isrc/compiler/ -Isrc/runtime/ -Isrc/shared/ -Isrc/utils/ -Isrc/optionals/ -std=gnu99 -fgnu89-inline -fPIC -DBUILD_GRAVITY_API -g -O0 --coverage\" -j @DPP_PARALLEL_BUILD@"
          ]
        }
      ]
    },
    "test-type": "ctest",
    "test": {
      "commands": [
        {
          "type": "docker",
          "lines": [
            "bash -c \"./gravity $(find test/unittest -type f -not -path \\\"test/unittest/disabled/*\\\" -name \\\"*.gravity\\\" | awk \\\"NR==${cat DPP_TEST_INDEX}\\\")\""
          ]
        }
      ]
    },
    "test-coverage": {
      "commands": [
        {
          "type": "docker",
          "lines": [
            "bash -c \"./gravity $(find test/unittest -type f -not -path \\\"test/unittest/disabled/*\\\" -name \\\"*.gravity\\\" | awk \\\"NR==${cat DPP_TEST_INDEX}\\\")\""
          ]
        }
      ]
    },
    "gcov": {
      "exclude": [],
      "commands": [
        {
          "type": "docker",
          "lines": [
            "mkdir gcov",
            "bash -c 'find ./src -type f -name \"*.o\" -exec gcov @DPP_ADDITIONAL_GCOV_OPTIONS@ --preserve-paths {} \\;'",
            "bash -c 'mv *.gcov ./gcov'",
            "bash -c 'find ./gcov -type f -name \"*.gcda\" -delete'"
          ]
        }
      ]
    }
  },
